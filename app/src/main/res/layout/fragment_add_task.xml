 <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
    android:layout_height="match_parent">


     <!-- Placeholder morning drawable -->


     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">

         <TextView
             android:id="@+id/tasksText"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginStart="56dp"
             android:layout_marginTop="16dp"
             android:fontFamily="@font/inter_bold"
             android:paddingLeft="12dp"
             android:text="hi"
             android:textSize="24sp"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent" />

         <ImageView
             android:id="@+id/timeOfDayImageView"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_marginStart="16dp"
             android:layout_marginTop="16dp"
             android:src="@drawable/baseline_sunny"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent" />

         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/tasksRecyclerView"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@id/tasksText"
             android:nestedScrollingEnabled="true"
             app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintVertical_bias="0.126"
             tools:layout_editor_absoluteX="0dp" />

         <ImageView
             android:id="@+id/nightImageView"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/baseline_night"
             android:visibility="gone"
             app:layout_constraintStart_toStartOf="@+id/timeOfDayImageView"
             app:layout_constraintTop_toTopOf="@+id/timeOfDayImageView" />

         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/tasksRecyclerView1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:nestedScrollingEnabled="true"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintVertical_bias="0.563"
             tools:layout_editor_absoluteX="-2dp" />

     </androidx.constraintlayout.widget.ConstraintLayout>

     <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="fab_button"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="64dp"
        app:borderWidth="0dp"
        android:backgroundTint="@android:color/white"
        android:elevation="2dp"
        android:src="@drawable/baseline_add" />


 </RelativeLayout>
