<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="RoundedCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item> <!-- Adjust corner size as per your preference -->
    </style>

    <style name="CustomCheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/gray</item>
        <item name="android:textColorSecondary">@color/gray</item>
    </style>

    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_popup_menu</item>
        <item name="android:textColor">@color/gray</item>
        <!-- Add more customizations here -->
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@drawable/bg_spinner</item>
    </style>
</resources>

